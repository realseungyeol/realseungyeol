<!-- HTML에서 JavaScript 분리 -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>HTML</title>
  <link rel="stylesheet" href="../node_modules/bootstrap/dist/css/bootstrap.min.css">
  <style>
  .container {
    width: 600px;
    margin: 0px auto;
  }
  </style>
</head>
<body>
<div class="container">
<h1>강사 정보</h1>
{{#if detail}}
<form class="form-horizontal" action="update.do" method="post">
{{else}}
<form class="form-horizontal" action="add.do" method="post">
{{/if}}
{{#if detail}}
  <div class="form-group bit-view">
    <label class="col-sm-2 control-label">번호</label>
    <div class="col-sm-10">
      <input type="hidden" name="no" value="{{data.mno}}">
      <p class="form-control-static" id="fi-no">{{data.mno}}</p>
    </div>
  </div>
{{/if}}
  <div class="form-group">
    <label for="fi-email" class="col-sm-2 control-label">이메일</label>
    <div class="col-sm-7">
      <input type="email" class="form-control" id="fi-email" name="email"
       placeholder="이메일" value="{{data.email}}">
    </div>
  </div>
  <div class="form-group">
    <label for="fi-name" class="col-sm-2 control-label">이름</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" name="name" id="fi-name" placeholder="이름" value="{{data.name}}">
    </div>
  </div>
  <div class="form-group">
    <label for="fi-tel" class="col-sm-2 control-label">전화번호</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="fi-tel" name="tel" placeholder="전화번호" value="{{data.tel}}">
    </div>
  </div>
  <div class="form-group">
    <label for="fi-school-name" class="col-sm-2 control-label">홈페이지</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="fi-hmpg" name="homepage" placeholder="홈페이지" value="{{data.hmpg}}">
    </div>
  </div>
  <div class="form-group">
    <label for="fi-school-name" class="col-sm-2 control-label">페이스북</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="fi-fcbk" name="facebook" placeholder="페이스북" value="{{data.fcbk}}">
    </div>
  </div>
  <div class="form-group">
    <label for="fi-school-name" class="col-sm-2 control-label">트위터</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="fi-twit" name="twitter" placeholder="트위터" value="{{data.twit}}">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
{{#if detail}}
      <button type="submit" class="btn btn-primary bit-view" id="upd-btn">변경</button>
      <a href="delete.do?no={{data.mno}}" class="btn btn-primary bit-view" id="del-btn">삭제</a>
{{else}}
      <button type="submit" class="btn btn-primary bit-new" id="add-btn">추가</button>
{{/if}}
      <a href="list.do" class="btn btn-primary" id="lst-btn">목록</a>
    </div>
  </div>
</form>
</div>

</script>
</body>
</html>




