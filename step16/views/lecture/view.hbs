<!-- HTML에서 JavaScript 분리 -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>HTML</title>
  <link rel="stylesheet" href="../node_modules/bootstrap/dist/css/bootstrap.min.css">
  <style>
  .container {
    width: 600px;
    height: 10000px;
  }
  </style>
</head>
<body>
<div class="container">
<h1>강의 정보</h1>
{{#if detail}}
<form class="form-horizontal" action="update.do" method="post">
{{else}}
<form class="form-horizontal" action="add.do" method="post">
{{/if}}
{{#if detail}}
  <div class="form-group bit-view">
    <label class="col-sm-2 control-label">번호</label>
    <div class="col-sm-10">
      <input type="hidden" name="lno" value="{{data.lno}}">
      <p class="form-control-static" id="fi-lno">{{data.lno}}</p>
    </div>
  </div>
{{/if}}
  <div class="form-group">
    <label for="fi-titl" class="col-sm-2 control-label">제목</label>
    <div class="col-sm-7">
      <input type="text" class="form-control" id="fi-titl" name="titl"
       placeholder="titl" value="{{data.titl}}">
    </div>
  </div>
  <div class="form-group">
    <label for="fi-dscp" class="col-sm-2 control-label">설명</label>
    <div class="col-sm-7">
      <textarea class="form-control" id="fi-dscp" name="dscp"
       placeholder="설명" value="{{data.dscp}}"></textarea>
    </div>
  </div>
  <div class="form-group">
    <label for="fi-sd2t" class="col-sm-2 control-label">시작일</label>
    <div class="col-sm-7">
      <input type="date" class="form-control" id="fi-sdt2" name="sdt2"
       placeholder="시작일" value="{{data.sdt2}}">
    </div>
  </div><div class="form-group">
    <label for="fi-edt2" class="col-sm-2 control-label">종료일</label>
    <div class="col-sm-7">
      <input type="date" class="form-control" id="fi-edt2" name="edt2"
       placeholder="종료일" value="{{data.edt2}}">
    </div>
  </div>
  <div class="form-group">
    <label for="fi-qty" class="col-sm-2 control-label">수강인원</label>
    <div class="col-sm-7">
      <input type="number" class="form-control" id="fi-qty" name="qty"
       placeholder="수강인원" value="{{data.qty}}">
    </div>
  </div>
  <div class="form-group">
    <label for="fi-pric" class="col-sm-2 control-label">수업료</label>
    <div class="col-sm-7">
      <input type="number" class="form-control" id="fi-pric" name="pric"
       placeholder="수업료" value="{{data.pric}}">
    </div>
  </div>
  <div class="form-group">
    <label for="fi-thrs" class="col-sm-2 control-label">총시간</label>
    <div class="col-sm-7">
      <input type="number" class="form-control" id="fi-thrs" name="thrs"
      placeholder="총시간" value="{{data.thrs}}">
    </div>
  </div>
  <div class="form-group">
    <label for="fi-crmno" class="col-sm-2 control-label">강의실일련번호</label>
    <div class="col-sm-7">
      <input type="number" class="form-control" id="fi-crmno" name="crmno"
      placeholder="강의실일련번호" value="{{data.crmno}}">
    </div>
  </div>
  <div class="form-group">
    <label for="fi-mrno" class="col-sm-2 control-label">매니저일련번호</label>
    <div class="col-sm-7">
      <input type="number" class="form-control" id="fi-mrno" name="mrno"
      placeholder="매니저일련번호" value="{{data.mrno}}">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
{{#if detail}}
      <button type="submit" class="btn btn-primary bit-view" id="upd-btn">변경</button>
      <a href="delete.do?no={{data.mno}}" class="btn btn-primary bit-view" id="del-btn">삭제</a>
{{else}}
      <button type="submit" class="btn btn-primary bit-new" id="add-btn">추가</button>
{{/if}}
      <a href="list.do" class="btn btn-primary" id="lst-btn">목록</a>
    </div>
  </div>
</form>
</div>

</script>
</body>
</html>




